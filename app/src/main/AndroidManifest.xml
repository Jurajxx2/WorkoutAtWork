<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.trasim.workoutinwork">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WorkoutHistoryActivity"
            android:label="Records" />
        <activity
            android:name=".WorkoutActivity"
            android:label="Workout" />
        <activity
            android:name=".WorkoutListActivity"
            android:label="List of exercises" />
        <activity
            android:name=".InfoActivity"
            android:label="Info" />
        <activity
            android:name=".DialogActivity"
            android:label="Initial setup" />
        <activity
            android:name=".DialogActivity2"
            android:label="Initial setup" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />

        <activity android:name=".WorkdayReportActivity"
            android:label="Workday report"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog"/>

        <receiver
            android:name=".MyBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="WORKOUT_ALARM"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>